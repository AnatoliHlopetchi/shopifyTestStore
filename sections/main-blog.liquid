<section class='py-6 lg:py-10'>
  <h1 class='text-4xl mb-2 mx-4 lg:mb-8 lg:mx-16'>{{- blog.title -}}</h1>
  <div class='grid grid-cols-2 gap-x-2 gap-y-5 mx-4 lg:mx-16 lg:grid-cols-3 lg:gap-x-9 lg:gap-y-9'>
    {%- paginate blog.articles by 3 -%}
      {%- for article in blog.articles -%}
        {%- liquid
          if forloop.index < 4
            assign lazy = false
          else
            assign lazy = true
          endif
        -%}
        {%- render 'component.article-item', article: article, lazy: lazy -%}
      {%- endfor -%}
      {%- render 'component.pagination', paginate: paginate -%}
    {%- endpaginate -%}
  </div>
</section>

{% schema %}
{
  "name": "Blog Overview"
}
{% endschema %}
