{%- liquid
  assign s = section.settings
-%}

<section
  class='bg-[color:var(--backgroundColor)] py-12 md:py-28 px-4 md:px-64'
  style='--backgroundColor: {{ s.background_color }};'
>
  <div
    class='flex flex-col items-center justify-center text-center text-[color:var(--textColor)]'
    style='--textColor: {{ s.text_color }}'
  >
    {%- if s.quote != blank -%}
      <{{ s.quote_tag }} class='[&>p]:inline text-2xl md:text-5xl mb-4 md:mb-6 whitespace-pre-line'>
        {{- s.quote | prepend: '“' | append: '”' -}}
      </{{ s.quote_tag }}>
    {%- endif -%}

    {%- if s.author != blank -%}
      <p class='text-base md:text-xl'>{{ s.author }}</p>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Quote",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "quote",
      "label": "Quote",
      "default": "<p>Education is the beating heart of the hairdressing profession</p>",
      "info": "Press SHIFT + ENTER to display the text in the next line"
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author",
      "default": "Rob Peetoom"
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#171719"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "quote_tag",
      "label": "Quote tag",
      "default": "h2",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        },
        {
          "value": "span",
          "label": "Span"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Quote"
    }
  ]
}
{% endschema %}
